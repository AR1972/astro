$M_B_00006H_MSG LABEL BYTE
        DB      $M_B_00006H_END-$M_B_00006H_MSG-1
        DB      "*"
$M_B_00006H_END LABEL BYTE
  
$M_B_00007H_MSG LABEL BYTE
        DB      $M_B_00007H_END-$M_B_00007H_MSG-1
