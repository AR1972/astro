LF		  equ	  10
BELL		  equ	   7
END_OF_MESSAGE	  equ	   0
ALPHA_D 	  equ	  'D'
ALPHA_F 	  equ	  'F'
NO_SUBST	  EQU	  00H	       ;AN000;MSG PARAMETER SUBSTITUTION = 0
